@using TechStoreMVC.ViewModel
@model RegisterVM
@{
    ViewData["Title"] = "Sign up";
}

<div class="col-10 row">
    <div class="col-md-8 row">
        <p>
            <h4>Sign up for a new account</h4>
        </p>

        <div class="row ">
            <div class="col-md-8">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-control mb-3 d-flex justify-content-between">
                        <input class="btn btn-outline-success" type="submit" value="Sign up" />
                        <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
