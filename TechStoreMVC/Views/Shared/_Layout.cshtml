<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechStoreMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <header class="p-3 d-flex justify-content-around">
        <div class="container m-0">
            <div class="d-flex flex-wrap justify-content-between">
                <a asp-controller="Home" asp-action="Index"
                   class="d-flex align-items-center mb-2 mb-lg-0 text-black text-decoration-none">
                    <p>Logo</p>
                </a>

                <form class="col-6 mb-3 mb-lg-0 me-lg-3" role="search" asp-action="Search" asp-controller="Home" method="get">
                    <input type="search" name="searchTerm" class="form-control form-control-light text-bg-light" placeholder="Search..." aria-label="Search" />
                </form>

                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="text-end d-inline-flex">
                        <a class="btn btn-outline-secondary me-2" asp-controller="Account" asp-action="Login">
                            Login
                        </a>
                        <a class="btn btn-primary me-2" asp-controller="Account" asp-action="Register">
                            Sign-up
                        </a>
                        <a href="#" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-cart"></i>
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-end d-inline-flex">
                        <a class="btn btn-outline-secondary me-2">
                            <span class="me-2"><i class="bi bi-person"></i> @User.Identity.Name</span>
                        </a>
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="btn btn-danger me-2">Logout</button>
                        </form>

                        <a href="#" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-cart"></i>
                        </a>
                    </div>
                }

            </div>
        </div>
    </header>

    <div class="container-fluid justify-content-between">
        <div class="row">
            <div class="col-2">
                <ul class="nav flex-column">
                    <li class="nav-item">

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Mobile" asp-action="Index">Mobile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Laptop" asp-action="Index">Laptop</a>
                    </li>
                </ul>
            </div>
            <partial name="_Notification" />

            @RenderBody()
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2023 - TechStoreMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
