@using TechStoreMVC.Data.Enum;
@using TechStoreMVC.ViewModel;
@model EditMobileViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container col-10">

    <form method="post" asp-action="Edit" asp-controller="Mobile" enctype="multipart/form-data">
        <div class="border p-1 mt-1">
            <div class="row pb-1">
                <h3 class="text-secondary">Edit Mobile</h3>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Mobile Name..." />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter Mobile Description..."></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="Enter Mobile Name..." />
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ScreenSize"></label>
                <input asp-for="ScreenSize" class="form-control" type="number" step="0.01" />
            </div>

            <div class="form-group">
                <label asp-for="OperatingSystem"></label>
                <input asp-for="OperatingSystem" class="form-control" />
                <span asp-validation-for="OperatingSystem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Country"></label>
                <input asp-for="Address.Country" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.StreetAddress"></label>
                <input asp-for="Address.StreetAddress" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="MobileCategory"></label>
                <select asp-for="MobileCategory" class="form-control" asp-items="Html.GetEnumSelectList<MobileCategory>()">
                    <option value="">--Select a Category--</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" class="form-control" placeholder=" image">
            </div>

            <button type="submit" class="btn btn-primary mt-2">Edit</button>


        </div>





    </form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}