@using TechStoreMVC.Data.Enum;
@model Mobile
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    ViewData["Title"] = "Delete ";
}


<div class="container col-10">
    <form method="post" enctype="multipart/form-data" asp-controller="Mobile" asp-action="Delete">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="border p-1 mt-1">
            <div class="row pb-1">
                <h3 class="text-secondary">Create Mobile</h3>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input disabled asp-for="Name" class="form-control" placeholder="Enter Mobile Name..." />

            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea disabled asp-for="Description" class="form-control" placeholder="Enter Mobile Description..."></textarea>

            </div>
            <div class="form-group">
                <label asp-for="Brand"></label>
                <input disabled asp-for="Brand" class="form-control" placeholder="Enter Mobile Name..." />
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input disabled asp-for="Model" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ScreenSize"></label>
                <input disabled asp-for="ScreenSize" class="form-control" type="number" step="0.01" />
            </div>

            <div class="form-group">
                <label asp-for="OperatingSystem"></label>
                <input disabled asp-for="OperatingSystem" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input disabled asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.Country"></label>
                <input disabled asp-for="Address.Country" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.StreetAddress"></label>
                <input disabled asp-for="Address.StreetAddress" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MobileCategory"></label>
                <select disabled asp-for="MobileCategory" class="form-control" asp-items="Html.GetEnumSelectList<MobileCategory>()">
                    <option value="">--Select a Category--</option>
                </select>
            </div>
            <button type="submit" class="btn btn-danger mt-2">Delete</button>
            </div>
    </form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}